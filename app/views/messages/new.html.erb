<%= content_for :nav_column do %>
  <%= render 'nav_column' %>
<% end %>

<%= content_for :messages do %>

  <div class="absolute flex flex-col items-center justify-between w-full h-[96%] lg:max-w-[700px] xl:max-w-[810px]">
    <div class="flex flex-row items-center h-full overflow-y-auto scrollbar-hide">
      <div class="flex flex-col items-center gap-3">
        <div class="p-3 bg-white border border-gray-100 rounded-full">
          <%= image_tag("logo.svg", width: "64", height: "64", class: "text-gray-950") %>
        </div>
        <span class="text-2xl font-semibold tracking-tighter">
          How can I help you today?
        </span>
        <% if Feature.ubicloud_mode? %>
        <span class="text-sm text-gray-500 mt-1">
          EuroGPT can make mistakes. Verify the information provided.
        </span>
        <span class="text-sm text-gray-500 mt-1">
          Enable or disable web search in <%= link_to "Settings", edit_settings_person_path(@assistant), class: "underline" %>.
        </span>
        <% end %>
      </div>
    </div>

    <div class="grid w-full grid-cols-1 gap-2 px-6 bg-transparent md:grid-cols-2">
      <%= render partial: "messages/main_column/conversation_starter",
                 collection: @conversation_starters,
                 with_index: true %>
    </div>
  </div>
<% end %>

<%= render "main_column" %>
